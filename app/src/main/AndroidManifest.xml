<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edmundconnor.clubem">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name=".SignUp" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".EditProfile" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".NavigationActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".myClubs" />
        <activity android:name=".allClubs" />
        <activity
            android:name=".privateClubPage"
            android:label="@string/title_activity_private_club"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabListActivity"
            android:label="@string/title_tab_list"
            android:theme="@style/AppTheme.NoActionBar" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TabDetailActivity"
            android:label="@string/title_tab_detail"
            android:parentActivityName=".TabListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.edmundconnor.clubem.TabListActivity" />
        </activity>
        <activity android:name=".FeedActivity">
        </activity>
    </application>

</manifest>